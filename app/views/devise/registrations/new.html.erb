<div class="alert-danger"><%= devise_error_messages! %></div> 
<div class="container">  
  <div class="row">
    <div class="col-md-4 mt-5 p-0 mx-auto card bg-light">
      <div class="card-header text-success h4"><span class="ion-person-add"></span> Registrarse</div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      
      <div class="card-body">
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "e-mail" %>
        </div>

        <div class="form-group">
          <% if @minimum_password_length %>

          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "password" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "repite password" %>
        </div>
        <br>

        <div class="actions">
          <%= f.submit "Registrarse", class: "btn btn-success btn-block" %>       
        </div>
      </div>

      <div class="card card-footer p-0">
       <%= render "devise/shared/links"%>
     </div>
     <% end %>
   </div>
 </div>
</div>
